<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Bias: Position of element along horizontal or vertical axis -->
    <!-- Zigzag arrows represent constraints representing the connection of a view with its parent view -->
    <!-- 3 types of constraints: Fixed constraints represented by a straight line, commonly used for margins -->
    <!-- wrap_content is a line of chevrons which expands only as much as needed to wrap its contents -->
    <!-- Zigzag is "match" constraints -->
    <!-- Hovering over a constraint shows 3 buttons, the leftmost button deletes all constraints for this view-->

    <TextView
        style="@style/WhiteBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>